<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:paddingEnd="25dp"
        android:drawableEnd="@drawable/message"
        android:drawablePadding="15dp"
        android:background="@drawable/shapetv"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">
<!--        first horizontal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/sendCard"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapecard"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:src="@drawable/send"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send Messages"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@color/brown"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/viewCard"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapecard"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:padding="13dp"
                        android:src="@drawable/read"
                       />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Messages"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@color/brown"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
<!--        End of first horizontal-->
<!--        2nd horizontal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/chatCard"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapecard"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp"
                        android:src="@drawable/chat"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We Chat"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@color/brown"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/deleteCard"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapecard"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:padding="13dp"
                        android:src="@drawable/dele1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Messages"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@color/brown"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
<!--        end of 2nd horizontal-->

    </LinearLayout>

</LinearLayout>